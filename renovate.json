{
    "extends": [
        "github>konflux-ci/mintmaker//config/renovate/renovate.json"
    ],
    "tekton": {
        "includePaths": [".tekton/**"],
        "schedule": ["at any time"]
    },
    "schedule": [
        "* 3-10 * * 1"
    ],
    "ignorePaths": [
      ".pre-commit-config.yaml"
    ],
    "pip_requirements": {
        "separateMajorMinor": false,
        "separateMinorPatch": false,
        "groupName": "Pip requirements"
    }
}
